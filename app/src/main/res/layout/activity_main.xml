<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_bg"
    tools:context="com.site.siteproject.MainActivity">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"

        android:src="@drawable/nahar_logo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_margin="20dp"

        android:layout_below="@id/logo"
        android:text="Our Projects"
        />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        >


            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="4"
                android:background="#80E1E1E1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/left"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:layout_height="100dp"
                    android:src="@drawable/left_arraow"
                    />
               <!-- <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:src="@drawable/ailis_logo"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:src="@drawable/jaishree_logo"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:src="@drawable/jothi_logo"
                    />
-->

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_marginRight="5dp"
                    android:layout_height="120dp"
                    >

                </android.support.v4.view.ViewPager>

                <ImageView
                    android:id="@+id/right"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:layout_height="100dp"
                    android:src="@drawable/right_arrow"
                    />



            </LinearLayout>






    </RelativeLayout>




</RelativeLayout>
